@model IEnumerable<PHCNAPI.Models.Customer>
<div class="container">
    <div class="row col-md-12">
        <div class="col-md-1"></div>
        <div class="col-md-11">
            @{
                ViewBag.Title = "Customer List";
            }
            
            <p>
                @Html.ActionLink("Create New", "Index",null,new {@class="btn btn-danger" })
            </p>
            
            <table class="table table-responsive table-bordered">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.MeterNo)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.CustomerName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AccountNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MobilePhoneNo)
                    </th>
                   
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <th>
                            @Html.DisplayFor(modelItem => item.MeterNo)
                        </th>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MobilePhoneNo)
                        </td>
                        
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.MeterNo }) &nbsp;&nbsp;
                            @Html.ActionLink("Details", "Details", new { id = item.MeterNo })&nbsp;&nbsp; 
                            @Html.ActionLink("Delete", "Delete", new { id = item.MeterNo })
                        </td>
                    </tr>
                }

            </table>
            </div>
    </div>
    </div>
